<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.History.HistorySelected"
    android:background="@drawable/car_info"
    >


    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_arrow_back_18"
        android:backgroundTint="@color/white"
        android:onClick="back"
        android:layout_marginStart="10dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/autoCard"
        android:layout_below="@id/backarrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="35dp"
        android:layout_margin="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:layout_width="256dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo"
                android:id="@+id/modelo"
                android:layout_below="@id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placas"
                android:id="@+id/placas"
                android:layout_below="@id/modelo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textSize="14dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechas"
        android:id="@+id/txtFechas"
        android:layout_below="@id/autoCard"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fechaCard"
        android:layout_below="@id/txtFechas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/date"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/date"
                android:backgroundTint="@color/purple_700"
                android:onClick="back"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-2020 - 15-12-2020"
                android:textSize="18sp"
                android:layout_toEndOf="@id/date"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicación"
        android:id="@+id/txtubicacion"
        android:layout_below="@id/fechaCard"
        android:layout_marginStart="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ubicacionCard"
        android:layout_below="@id/txtubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/loc"
                android:backgroundTint="@color/purple_700"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver ubicación"
                android:textSize="18sp"
                android:layout_toEndOf="@id/location"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>