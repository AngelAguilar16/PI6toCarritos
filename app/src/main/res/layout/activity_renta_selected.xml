<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".Driver.Home.RentaSelected">

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_arrow_back_18"
        android:onClick="back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="256dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/backarrow"/>


    <TextView
        android:id="@+id/modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:text="modelo"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/placas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modelo"
        android:text="placas"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/placas"
        android:text="usuario"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/location"
        android:layout_marginTop="30dp"
        android:layout_below="@id/usuario"
        android:onClick="openLocation"/>
    <TextView
        android:id="@+id/punto_de_entrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario"
        android:layout_toEndOf="@id/location"
        android:text="Ver punto de entrega"
        android:textSize="30sp"
        android:layout_marginTop="31dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:onClick="openLocation"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@layout/boton_redondo"
        android:textColor="#FFF"
        android:text="Entregar"
        android:onClick="entregar"
        android:id="@+id/btn_entregar"/>
    
</RelativeLayout>