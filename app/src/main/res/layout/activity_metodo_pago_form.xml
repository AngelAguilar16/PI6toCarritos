<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Cliente.Options.metodoPagoForm"
    android:background="#e3cbf5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Método de pago"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />


    <!---
    // e3cbf5//
    //f7edff//
   // bbfafa//
   -->
    <RelativeLayout
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginTop="75dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_edit_nombre">
            <EditText
                android:id="@+id/nametarjeta"
                android:background="#bbfafa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:hint=" Tarjetahabiente" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/layout_edit_apellido_p"
            android:layout_below="@id/layout_edit_nombre">

            <EditText
                android:id="@+id/numtarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Número de tarjeta"
                android:background="#bbfafa"
                android:maxLength="16"
                android:inputType="number"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_edit_apellido_m"
            android:layout_below="@id/layout_edit_apellido_p">
            <EditText
                android:id="@+id/fechatarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/edit_apellido_p"
                android:layout_marginTop="10dp"
                android:maxLength="4"
                android:background="#bbfafa"
                android:inputType="number"
                android:hint="Fecha de vencimiento  MM/YY" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_edit_email"
            android:layout_below="@id/layout_edit_apellido_m">
            <EditText
                android:id="@+id/cvvtarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/edit_apellido_m"
                android:layout_marginTop="10dp"
                android:maxLength="3"
                android:background="#bbfafa"
                android:inputType="number"
                android:hint="  CVV" />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registrodom"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registro"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:layout_marginTop="0dp">



    </RelativeLayout>

    <Button
        android:id="@+id/btntarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrodom"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="19dp"
        android:text="Añadir método de pago"
        />

    <TextView
        android:id="@+id/ListaTarjetasMarquer"
        android:layout_width="286dp"
        android:layout_height="43dp"
        android:layout_below="@id/btntarjeta"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:text="Lista de tarjetas agregadas"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <ListView
        android:id="@+id/ListaMetodoPagos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ListaTarjetasMarquer"
        android:layout_marginTop="25dp"
        android:background="#bbfafa"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginEnd="211dp"
        app:srcCompat="@drawable/logo"
        />


</RelativeLayout>