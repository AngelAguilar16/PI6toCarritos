<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.Options.EditInfo"
    android:background="@drawable/edit_profile">
    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_arrow_back_18"
        android:backgroundTint="@color/white"
        android:onClick="back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/txtPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar perfil"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"/>

    <ImageView
        android:id="@+id/done"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/done"
        android:backgroundTint="@color/white"
        android:onClick="guardarInfo"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:id="@+id/layout_edit_nombre"
        android:layout_below="@id/txtPerfil"
        android:layout_marginTop="186dp"
        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/user"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido paterno"
        android:id="@+id/layout_edit_ap"
        android:layout_below="@id/layout_edit_nombre"

        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/user"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_Ap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido materno"
        android:id="@+id/layout_edit_am"
        android:layout_below="@id/layout_edit_ap"

        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/user"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_Am"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:id="@+id/layout_edit_correo"
        android:layout_below="@id/layout_edit_am"

        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/mail"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TelÃ©fono"
        android:id="@+id/layout_edit_tel"
        android:layout_below="@id/layout_edit_correo"

        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/phone"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de nacimiento"
        android:id="@+id/layout_edit_fNac"
        android:layout_below="@id/layout_edit_tel"

        android:layout_marginStart="35dp"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/cake"
        android:padding="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_fNac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>