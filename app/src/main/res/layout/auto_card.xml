<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="15dp"
        app:cardCornerRadius="10dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="14dp">
            <TextView
                android:id="@+id/tvNombre_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textColor="@color/black"
                android:textSize="25dp"/>
            <ImageView
                android:id="@+id/ivAuto"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_below="@id/tvNombre_auto"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivAuto"
                android:layout_below="@id/tvNombre_auto"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginRight="0dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="18dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/gears"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/gears"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/transmision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gears"
                            android:text="TransmisiÃ³n"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="30dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/door"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/door"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:id="@+id/puertas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/door"
                            android:text="Puertas"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="30dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/pass"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/passenger"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:id="@+id/pasajeros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pass"
                            android:text="Pasajeros"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvIncluidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivAuto"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#560856"
                app:cardCornerRadius="10dp"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Incluidos en la renta"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/ivwarranty"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/warranty" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:text="Cobertura de seguro"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/ivkm"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="36dp"
                        app:srcCompat="@drawable/speed" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:text="Kilometraje ilimitado"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvIncluidos"
                android:orientation="horizontal"
                android:gravity="right"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3e912c"
                    android:text="$0.00"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnRentar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#3e912c"
                    android:layout_marginLeft="20dp"
                    android:padding="14dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvRentar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:text="Rentar"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_toEndOf="@id/tvRentar"
                            app:srcCompat="@drawable/rentar"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </RelativeLayout>
        
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>